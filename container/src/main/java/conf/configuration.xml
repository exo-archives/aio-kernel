<?xml version="1.0" encoding="UTF-8"?>
<configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
    xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">


  <container-lifecycle-plugin>
    <type>org.exoplatform.container.monitor.jvm.AddJVMComponentsToRootContainer</type>
  </container-lifecycle-plugin>

  <component>
  	<key>org.exoplatform.container.monitor.jvm.OperatingSystemInfo</key>
    <jmx-name>info:type=OperatingSystemInfo</jmx-name>
    <type>org.exoplatform.container.monitor.jvm.OperatingSystemInfoImpl</type>
  </component>	
  	
  <component>
    <key>org.exoplatform.container.monitor.jvm.JVMRuntimeInfo</key>
    <jmx-name>info:type=JVMRuntimeInfo</jmx-name>
    <type>org.exoplatform.container.monitor.jvm.JVMRuntimeInfoImpl</type>
	  <init-params>
	    <properties-param>
	      <name>add.system.properties</name>
	      <property name="org.apache.lucene.maxClauseCount" value="3000"/>
	    </properties-param>
	  </init-params>
  </component>
</configuration>
