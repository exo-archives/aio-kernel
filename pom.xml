  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.kernel</groupId>
  <artifactId>config</artifactId>
  <name>eXo Kernel</name>
  <version>2.0.3</version>
  <packaging>pom</packaging>

  <modules>
    <module>container</module>
    <module>commons</module>

    <module>component/common</module>
    <module>component/remote</module>
    <module>component/cache</module>
    <module>component/command</module>
  </modules>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.drl</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.drl</include>
        </includes>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration> <source>1.5</source><target>1.5</target><optimize>true</optimize></configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip>
          <useFile>false</useFile>
          <forkMode>pertest</forkMode><!--once , pertest -->
          <testFailureIgnore>false</testFailureIgnore>
          <includes>
            <include implementation="java.lang.String">**/Test*.java</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>default</id>  
      <activation>
        <property><name>default</name></property>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <exo.platform.version>2.0.3</exo.platform.version>

        <org.exoplatform.tool.version>2.0.3</org.exoplatform.tool.version>
        <org.exoplatform.kernel.version>2.0.3</org.exoplatform.kernel.version>
      </properties>
    </profile>
  </profiles>
</project>
